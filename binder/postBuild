mkdir bin

# installation instructions from the SLiM manual:
wget http://benhaller.com/slim/SLiM.zip
unzip SLiM.zip
cd SLiM
cmake .
make slim

# move the compiled SLiM binary
cd ../
mv SLiM/slim bin/
rm SLiM.zip
rm -rf SLiM

# install gifski to enable animation rendering
cargo install gifski

export PATH=/home/jovyan/bin:/home/jovyan/.cargo/bin:$PATH

# add $PATH to R
echo "PATH=$PATH" > ~/.Renviron
